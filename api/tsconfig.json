{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": false,
    "resolveJsonModule": true,
    "noUnusedLocals": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["test"]
}
